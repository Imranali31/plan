<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.planandpricing.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_bottomPlanAndPriceFragment"
            app:destination="@id/bottomPlanAndPriceFragment" />
    </fragment>
    <dialog
        android:id="@+id/bottomPlanAndPriceFragment"
        android:name="com.example.planandpricing.BottomPlanAndPriceFragment"
        android:label="fragment_bottom_plan_and_price"
        tools:layout="@layout/fragment_bottom_plan_and_price" >
        <action
            android:id="@+id/action_bottomPlanAndPriceFragment_to_paymentFragment"
            app:destination="@id/paymentFragment" />
    </dialog>
    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.example.planandpricing.PaymentFragment"
        android:label="fragment_payment"
        tools:layout="@layout/fragment_payment" />
</navigation>